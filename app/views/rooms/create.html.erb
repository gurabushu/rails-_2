<%= form_with url: rooms_path, method: :get, local: true do %>
  <div class="form-group">
    <%= label_tag :search, "Search Rooms" %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Enter room name or description" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Search", class: "btn btn-primary" %>
  </div>
<% end %>