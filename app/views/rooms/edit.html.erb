<h2>施設情報編集</h2>

<%= form_with model: @room, local: true do |f| %>
  <div>
    <%= f.label :name, "施設名" %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "説明" %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :cash, "料金" %><br>
    <%= f.number_field :cash %>
  </div>
  <div>
    <%= f.label :img, "画像" %><br>
    <%= f.file_field :img %>
  </div>
  <div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "編集", edit_room_path(@room), class: "btn btn-secondary" %>
<%= link_to "戻る", rooms_path, class: "btn btn-secondary", style: "margin-left: 8px;" %>
<%= link_to "施設一覧に戻る", rooms_path, class: "btn btn-secondary", style: "margin-top: 16px;" %>